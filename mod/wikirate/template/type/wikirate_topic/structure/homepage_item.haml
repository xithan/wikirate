%div
  .container.homepage-topic-item
    .row.text-center.topic-header
      .col-md-4.col-xs-4.nopadding
        %a.inherit-anchor{:href => path}
          .row.img-thumbnail.homepage-logo-container
            = field_nest :image
      .col-md-8.col-xs-8
        .row.topic-title.text-left
          %a.inherit-anchor{:href => path}
            %h3.pull-left.ellipsis
              = _render_title
          %br/
        .row.contribution-details.dark-grey-color.remove-text-decoration
          .col-md-12.data-count
            .col-md-6.slab
              %a.inherit-anchor{:href => path}
                .number
                  = field_nest :metric, view: :count
                .number-label Metrics
            .col-md-6.slab
              %a.inherit-anchor{:href => tab_url("companies")}
                .number
                  = field_nest :wikirate_company, view: :count
                .number-label Companies
    .row.clearfix.padding-top-15.company-content.background-white
      = field_nest :metric, view: :homepage_table
