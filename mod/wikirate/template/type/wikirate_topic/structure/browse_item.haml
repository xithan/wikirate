.browse-topic-item
  .text-center.topic-header{:title => card.name}
    = link_to_card card, nest(card, view: :title), class: "inherit-anchor"
  .row.clearfix.company-content
    .col-md-12.col-xs-12.nopadding.left
      %a.inherit-anchor{:href => nest(card, view: :url)}
        .row-data.center-logo
          = nest card.image_card
  .row.data-count
    .col-md-6.slab
      %a.inherit-anchor{:href => tab_url(:metric)}
        .number
          = field_nest :metric, view: :count
        .number-label Metrics
    .col-md-6.slab
      %a.inherit-anchor{:href => tab_url(:company)}
        .number
          = field_nest :wikirate_company, view: :count
        .number-label Companies
