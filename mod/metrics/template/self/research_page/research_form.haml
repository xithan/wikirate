.panel-default.nodblclick.stick-left#metric-container
  - if project?
    .row
      .border-bottom.col-md-12.nopadding.panel-default
        .heading-label.panel-heading
          Project
        %h4.padding-20
          = nest project, view: :thumbnail
  .row
    .border-bottom.col-md-12.nopadding.panel-default
      .heading-label.panel-heading
        Company
      %h4
        = nest companies.first, view: :thumbnail

  .row.panel-default.metric-list
    .heading-label.panel-heading
      Metrics
    = process_metrics

= render_haml :source_side
